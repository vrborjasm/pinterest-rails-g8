<%= form_for(pin) do |f| %>
  <% if pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="field">
      <%= f.label :photo %><br>
      <%= f.text_field :photo, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
  </div>

  <%= button_tag(type: "submit", class: "btn btn-primary", name: "commit", value: "conceal") do %>
    <i class="fas fa-share-square"></i>
  <% end %> 

  <%= link_to pin do %>
    <button class="btn btn-primary "><i class="far fa-eye "></i></button>
  <% end %>

  <%= link_to root_path do %>
    <button class="btn btn-primary"><i class="fas fa-undo-alt"></i></button>
  <% end %>
<% end %>